<h1>Log in</h1>

<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :username%><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in", f.submit %>
  </div>
<% end %>
